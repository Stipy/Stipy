<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
            <section name="Spity.Terminal.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
        </sectionGroup>
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>

  <!--WCF-->
  <system.serviceModel>
    <services>
      <service name="Spity.Terminal.ServiceProviders.ServiceProvider">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8090/spity" />
          </baseAddresses>
        </host>
        <endpoint binding="webHttpBinding"
                  contract="Nelibur.ServiceModel.Contracts.IJsonService" />
      </service>
    </services>
  </system.serviceModel>
  
    <applicationSettings>
        <Spity.Terminal.Properties.Settings>
            <setting name="MongoDbConnectionString" serializeAs="String">
                <value>mongodb://localhost:27017</value>
            </setting>
        </Spity.Terminal.Properties.Settings>
    </applicationSettings>
</configuration>